<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_region"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_toolbar"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#009688"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/select_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:background="@drawable/button_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/select_enabled"/>

            <ImageButton
                android:id="@+id/erase_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/button_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/delete_selector"/>

            <Button
                android:id="@+id/colour_button4"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:text="Current Color" />

            <ImageButton
                android:id="@+id/rect_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/button_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/rect_enabled" />

            <ImageButton
                android:id="@+id/circle_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/button_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circle_enabled" />

            <ImageButton
                android:id="@+id/line_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:background="@drawable/button_border"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/line_enabled" />

            <ImageButton
                android:id="@+id/colour_button1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="#03A9F4" />

            <ImageButton
                android:id="@+id/colour_button2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="#9C27B0" />

            <ImageButton
                android:id="@+id/colour_button3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:background="#F44336" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>